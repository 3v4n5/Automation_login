{
    "default": {
        "requireModule": [
            "ts-node/register"
        ],
        "require": [
            "src/test/steps/**/*.ts",
            "src/test/hooks/**/*.ts"
        ],
        "paths": [
            "src/test/features/**/*.feature"
        ],
        "format": [
            "progress",
            "json:reports/cucumber-report.json",
            "html:reports/cucumber-report.html"
        ],
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "publishQuiet": true,
        "dryRun": false,
        "parallel": 4
        
    }
}